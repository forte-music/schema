{
  "name": "@forte-music/schema",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.35",
  "description": "The graphql schema for communication with forte.",
  "main": "schema.json",
  "files": [
    "schema.graphql",
    "schema.json",
    "index.d.ts",
    "fixtures/",
    "tests/"
  ],
  "repository": "git@github.com:forte-music/schema.git",
  "author": "Martin Charles <martincharles07@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepack": "yarn build",
    "lint": "graphql lint",
    "build": "yarn generate-schema && yarn compile-fixtures",
    "compile-fixtures": "node build.js",
    "generate-schema": "apollo-codegen introspect-schema schema.graphql --output schema.json"
  },
  "bin": {
    "forte-test-api": "./tests/cli.js"
  },
  "devDependencies": {
    "apollo-codegen": "^0.20.0",
    "graphql-cli": "^2.16.3",
    "toml": "^2.3.3"
  },
  "dependencies": {
    "@types/graphql": "^0.13.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-preset-env": "^1.6.1",
    "graphql": "^0.13.0",
    "graphql-request": "^1.6.0",
    "graphql-tag": "^2.9.2",
    "jest": "^22.1.4",
    "jest-transform-graphql": "^2.1.0"
  },
  "graphql-schema-linter": {
    "rules": [
      "defined-types-are-used",
      "enum-values-all-caps",
      "types-are-capitalized"
    ]
  }
}
